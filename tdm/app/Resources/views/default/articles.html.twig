{% extends 'base.html.twig' %}

{% block body %}

	<form action="{{ path('article_create') }}" method="post" class="form-articles">
		<label for="titre">Titre :</label>
		<input type="string" name="titre"/>
		<label for="titre">Contenu :</label>
		<textarea name="contenu"></textarea>
		<br/>
		<label for="nom_photo">Titre de la photo</label>
		<input type="string" name="nom_photo"/>
		<label for="url">Url de la photo</label>
		<input type="string" name="url"/>
		<input type="submit" value="valider"/>
	</form>
	{% set i = 0 %}
	{% for article in articles %}
	<div class="col-md-3 article">	
		<div class="row">
			<div class="col-md-6">{{ article.titre }}</div>
			<div class="col-md-6">{{ article.date.date | date("d/m/y") }}</div>
		</div>
		<br/>
		<div class="contenu">{{ article.contenu }}</div>
		<br/>
		{% if tab[i].url != 1 %}
			<img src="{{ tab[i].url }}" alt="test" class="img-article">
		{% endif %}
	</div>
	{% set i = i+1 %}
	{% endfor %}
{% endblock %}