{% extends 'base.html.twig' %}

{% block body %}
<!-- partie carte Google maps-->
<div class="baisse-haut"></div>
<h1 class="title">Tour du monde de Pierre et MG</h1>
<h3 class="title">MG et Pierre sont actuellement à {{ location }}</h3>
    <div id="map" class="map"></div>
<!-- transition bas -->
    <div class="row">
        <a href="#bas"><div class="col-md-2 col-md-offset-5 col-xs-12 bouton-descente"><span class="glyphicon glyphicon-triangle-bottom" aria-hidden="true"></span></div></a>
    </div>
        <div class="trait"></div>
<!-- partie boutons p2-->
        <div id="bas"></div>
        <div class="partie-bas">
            <h2 class="nav-title">Naviguer sur le site</h2>
            <a href="{{ path('articlespublics_show')}}">
                <div class="col-md-2 col-md-offset-1 col-xs-12 btn-bottom">
                    <h3>Articles</h3>
                    <img src="{{ asset('img/iconearticle.png') }}" alt="article">
                </div>
            </a>
            <a href="{{ path('photo_list') }}">
                <div class="col-md-2 col-md-offset-2 col-xs-12 btn-bottom">
                    <h3>Photos</h3>
                    <img src="{{ asset('img/iconeimage.png') }}" alt="article">
                </div>
            </a>
            <a href="{{ path('conseil') }}">
                <div class="col-md-2 col-md-offset-2 col-xs-12 btn-bottom btn-conseil">
                    <h3>Conseils</h3>
                    <img src="{{ asset('img/iconeconseil.png') }}" alt="article">
                </div>
            </a>
        </div>
        <footer>
            <div>Site créé par Augustin Lefebvre</div>
        </footer>
    <script async defer
      src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAiyE9-Ee1H0dUNvhMq8hBDSRISwoIRb1E&callback=initMap">
    </script>
    <script type="text/javascript" src="{{ asset('js/script.js') }}"></script>
    <script type="text/javascript">
        {% set i = 0 %}
        var markericon = "{{ asset('img/marker.png') }}"
        var pointstab = [];
        {% for point in points %}
            pointstab[{{ i }}] = [{{ point.lat }} , {{ point.lng }}, "{{ point.name }}", "{{ point.id }}" ];
            {% set i = i+1 %}
        {% endfor %}
    </script>
{% endblock %}

{% block stylesheets %}

{% endblock %}
